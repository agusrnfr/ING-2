<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<%- include ('header', {tituloweb: '¡Oh my dog! | Ver Perfil Cruza ' }); %>

    <body id="body">

        <div class="container h-50 mt-5">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-lg-12 col-xl-8">
                    <div class="card text-black mb-3" style="border-radius: 25px;">
                        <div class="card-body p-md-2">
                            <p class="text-center h1 fw-bold mb-4 mx-1 mx-md-4 mt-3">
                                Perfil mascota <i class="bi bi-valentine"></i>
                            </p>
                            <div class="row justify-content-center p-3 m-3 rounded-3"
                                style="background-color: #dddbd1;">
                                <div class="col-md-6">
                                    <div class="row mb-2 h-100 align-items-center text-start">
                                        <div class="">
                                            <h4 class="fw-bold">
                                                <u>
                                                    <%= cruza.nombre %>
                                                </u>
                                            </h4>
                                            <h5>
                                                <strong>Sexo: </strong>
                                                <%=cruza.sexo %>
                                            </h5>
                                            <h5>
                                                <strong>Descripción: </strong>
                                                <%= cruza.texto_libre %>
                                            </h5>
                                            <h5>
                                                <strong>Raza: </strong>
                                                <%= cruza.raza %>
                                            </h5>
                                        </div>
                                        <div class="rounded-3 p-1 text-center" style="background-color: #252525; color: rgb(255, 245, 245);">
                                            <h4 class="fw-bold">
                                                Información de contacto
                                            </h4>
                                            <h5>
                                                <strong>Teléfono: </strong>
                                                <%= cruza.tel %>
                                            </h5>
                                            <h5>
                                                <strong>Correo: </strong>
                                                <%= cruza.mail %>
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                                <div
                                    class="col-md-10 col-lg-6 col-xl-6 d-flex align-items-center order-1 order-lg-2 p-0 justify-content-end">
                                    <% if (cruza && cruza.foto) { %>
                                        <img src="<%= cruza.foto %>" class="rounded-3" alt="Imagen de la mascota"
                                            style="width: 300px; height: 300px;">
                                        <% } else {%>
                                            <img src="/img/perro_estandar.png" alt="Imagen de la mascota"
                                                style="width: 300px; height: 300px;">
                                            <% } %>

                                </div>
                            </div>

                            <style>
                                @media only screen and (max-width: 1000px) {
                                    img {
                                        display: none;
                                    }

                                    div {
                                        display: block;
                                    }
                                }
                            </style>
                        </div>
                        <hr>
                        <div class="text-center mb-3"><a class="small" href="/cruzas">Volver</a></div>

                    </div>
                </div>
            </div>
        </div>
        </div>
        <script>
        </script>

    </body>
    <%- include ('sweet-alert') %>

        </html>